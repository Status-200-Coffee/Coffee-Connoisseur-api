        ],
        "favouriteShops": {
          "Newcastle": [2],
          "Carlisle": [5, 8]
        }
      }
    }
  },
  "PATCH /api/users/:username": {
    "description": "serves the updated user object",
    "reqBodyFormat": [
      { "profilePicture": "newProfilePicture" },
      { "newPhoto": "newPhotoUrl" },
