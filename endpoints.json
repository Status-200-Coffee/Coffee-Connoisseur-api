      "email": "newUserEmail"
    },
    "exampleResponse": {
      "user": {
        "_id": "6602ecafba064e781236f639",
        "username": "newUser",
        "email": "newUserEmail",
        "coffeeCollected": 1,
        "photosPosted": [],
