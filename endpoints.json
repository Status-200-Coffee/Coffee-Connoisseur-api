{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api",
    "exampleResponse": {
      "endpoints": [{}]
    }
  },
  "GET /api/shops/:city": {
    "description": "serves an array of all shops in the given city",
    "queries": [
      "dogFriendly",
      "dairyFree",
      "hasSeating",
      "lat",
      "long",
      { "sortBy": ["rating", "distance", "totalRatings"] },
      { "orderBy": ["asc", "desc"] }
    ],
    "exampleResponse": {
      "shops": [
        {
          "_id": 1,
          "name": "Brewed Bliss Caf√©",
          "mainImage": "",
          "userImages": [],
          "latitude": 54.9693,
          "longitude": -1.6107,
          "city": "Newcastle",
          "totalRatings": 15,
          "rating": 4.5,
          "dogFriendly": true,
          "dairyFree": false,
          "hasSeating": true,
          "description": "Where coffee meets perfection, every time."
        }
      ]
    }
  },
  "GET /api/shops/:city/:shop_id": {
    "description": "serves the shop object relating to the shop_id",
    "exampleResponse": {
      "shop": {
        "_id": 2,
        "name": "Espresso Junction",
        "mainImage": "",
        "userImages": [],
        "latitude": 54.98856,
        "longitude": -1.59311,
        "city": "Newcastle",
        "totalRatings": 18,
        "rating": 4.9,
        "dogFriendly": false,
        "dairyFree": true,
        "hasSeating": true,
        "description": "Crafted coffee, pure satisfaction."
      }
    }
  },
  "PATCH /api/shops/:city/:shop_id": {
    "description": "serves the updated shop object",
    "reqBodyFormat": [{ "rating": 5 }, { "newPhoto": "testUrl" }],
    "exampleResponse": {
      "shop": {
        "_id": 2,
        "name": "Espresso Junction",
        "mainImage": "",
        "userImages": [],
        "latitude": 54.98856,
        "longitude": -1.59311,
        "city": "Newcastle",
        "totalRatings": 18,
        "rating": 4.9,
        "dogFriendly": false,
        "dairyFree": true,
        "hasSeating": true,
        "description": "Crafted coffee, pure satisfaction."
      }
    }
  },
  "GET /api/cities": {
    "description": "serves an array of all cities",
    "exampleResponse": {
      "cities": [
        {
          "_id": 1,
          "city": "Newcastle",
          "latitude": 54.9783,
          "longitude": -1.6178
        },
        {
          "_id": 2,
          "city": "Carlisle",
          "latitude": 54.8925,
          "longitude": -2.9329
        }
      ]
    }
  },
  "GET /api/cities + lat/long queries": {
    "description": "serves the closest city to the passed lat and long coordinates",
    "queries": ["lat", "long"],
    "exampleResponse": {
      "cities": [
        {
          "_id": 1,
          "city": "Newcastle",
          "latitude": 54.9783,
          "longitude": -1.6178
        },
        {
          "_id": 2,
          "city": "Carlisle",
          "latitude": 54.8925,
          "longitude": -2.9329
        }
      ]
    }
  },
  "POST /api/cities": {
    "description": "serves the new city object",
    "reqBodyFormat": {
      "city": "Crewe City",
      "latitude": 111.456,
      "longitude": -777.012
    },
    "exampleResponse": {
      "city": {
        "_id": "6602ebb0ba064e781236f638",
        "city": "Crewe City",
        "latitude": 111.456,
        "longitude": -777.012
      }
    }
  },
  "GET /api/users": {
    "description": "serves an array of all users",
